- if is_admin?
  .page-header
    %h1= t('headers.lists.index')

  %table.table.table-hover.table-striped
    %thead
      %tr
        %th= List.human_attribute_name(:id)
        %th= List.human_attribute_name(:product)
        %th= List.human_attribute_name(:order)
        %th= List.human_attribute_name(:quantity_at_order)

    %tbody
      - @lists.each do |list|
        %tr
          %td{data: {label: List.human_attribute_name(:id)} }
            = list.id
          %td{data: {label: List.human_attribute_name(:product)} }
            = list.product.title
          %td{data: {label: List.human_attribute_name(:order)} }
            = list.order.order_number
          %td{data: {label: List.human_attribute_name(:quantity_at_order)} }
            = list.quantity_at_order
- else
  %h1{style: "color: red"} Доступ запрещен
