= form_for @list do |f|
  - if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this list from being saved:"
      %ul
        - @list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.select :product_id, Product.all.map{|x| [x.title, x.id]}
  .field
    = f.label :order_id
    = f.select :order_id, Order.all.map{|x| [x.order_number, x.id]}
  .field
    = f.label :quantity_at_order
    = f.number_field :quantity_at_order
  .actions
    = f.submit t("helpers.submit.submit")
